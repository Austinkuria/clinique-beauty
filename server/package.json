{
  "name": "clinique-beauty-server",
  "version": "1.0.0",
  "description": "Server for Clinique Beauty e-commerce platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-env": "node scripts/setup-env.js",
    "online": "node scripts/online.js",
    "ngrok": "node scripts/startNgrok.js",
    "start-with-ngrok": "concurrently \"pnpm run dev\" \"pnpm run ngrok\"",
    "install-ngrok": "node scripts/setup-ngrok.js",
    "ngrok:static": "node scripts/startNgrok.js --static",
    "ngrok:setup": "node scripts/setup-ngrok.js",
    "ngrok:check": "node scripts/setupNgrok.js --check",
    "check:mpesa": "node scripts/checkMpesaCallback.js",
    "mpesa:ngrok": "node scripts/startMpesaNgrok.js",
    "mpesa:check": "node scripts/checkMpesaCallback.js",
    "mpesa:dev": "concurrently \"pnpm run dev\" \"pnpm run mpesa:ngrok\"",
    "mpesa:debug": "node scripts/debug-mpesa-token.js",
    "ngrok:kill": "node scripts/kill-ngrok.js",
    "mpesa:ngrok:clean": "node scripts/kill-ngrok.js && pnpm run mpesa:ngrok",
    "mpesa:verify-production": "node scripts/verify-mpesa-production.js",
    "db:migrate": "node scripts/run-migration.js",
    "migrate:seller": "powershell -ExecutionPolicy Bypass -File scripts/migrate-seller-fields.ps1",
    "test:seller": "node scripts/test-seller-api.js",
    "deploy:functions": "powershell -ExecutionPolicy Bypass -File scripts/deploy-functions.ps1",
    "test:supabase": "node scripts/test-supabase-seller.js",
    "storage:setup": "node scripts/migrate-to-supabase-storage.js setup",
    "storage:migrate": "node scripts/migrate-to-supabase-storage.js migrate",
    "storage:verify": "node scripts/migrate-to-supabase-storage.js verify",
    "storage:full": "node scripts/migrate-to-supabase-storage.js full",
    "storage:test": "node scripts/test-supabase-storage.js test",
    "storage:stats": "node scripts/test-supabase-storage.js stats"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.36.0",
    "axios": "^1.9.0",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "ngrok": "4.3.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "nodemon": "^3.1.9"
  }
}